<div id="<%= dom_id recipe_food %>">
  <tr>
    <td><%= recipe_food.food.name %></td>
    <td><%= recipe_food.quantity %><%= recipe_food.food.measurement_unit %></td>
    <td><%= recipe_food.total_price %></td>
    <td>
      <%= link_to 'Edit', edit_recipe_food_path(recipe_food) %>
      <%= link_to 'Delete', recipe_food, method: :delete, data: { confirm: 'Are you sure?' } %>
    </td>
  </tr>
</div>
