

<div class="recipe-list" id="<%= dom_id recipe %>">
 <div class="title">
 <a href = "<%= recipe_path(id: recipe.id) %>"><h4><%= recipe.name %></h4></a>
 <% if can? :delete, recipe %>
    <%= button_to 'Delete', recipe_path(recipe), method: :delete, data: { confirm: 'Are you sure you want to delete this comment?' } %>
  <% end %>
 </div>
 <p><%= recipe.description %></p>
 </div>
 
 