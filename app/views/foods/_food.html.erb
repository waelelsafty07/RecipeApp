<%= stylesheet_link_tag 'foods', media: 'all' %>

<div id="<%= dom_id food %>">
<tr>
  <td><%= food.name %></td>
  <td><%= food.measurement_unit %></td>
  <td><%= food.price %></td>
  <td><%= food.quantity %></td>
  <td>
    <%= link_to 'Edit', edit_food_path(food) %>
    <% if can? :delete, food %>
      <%= button_to 'Delete', food_path(food), method: :delete, data: { confirm: 'Are you sure you want to delete this food?' } %>
    <% end %>
  </td>
</tr>
</div>
